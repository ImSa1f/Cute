--DONT STEAL GRRR LOFI IS HOT
task.wait()
game.StarterGui:SetCore("SendNotification", {
Title = "LofiOnTop"; 
Text = "Made By Lofi"; 
Icon = "rbxassetid://510921874"; 
Duration = 8;
})
task.wait()
game:GetService("UserInputService").MouseIconEnabled = true
game:GetService("UserInputService").MouseBehavior = Enum.MouseBehavior.Default
task.wait()
local Library = loadstring(game:HttpGet("https://raw.githubusercontent.com/xHeptc/Kavo-UI-Library/main/source.lua"))()
local Window = Library.CreateLib("DaddyLofi<3", "BloodTheme")
local AFeatures = Window:NewTab("Auto-Mode")
local AutoFeatures = AFeatures:NewSection("MeowForLofi")
local BFeatures = Window:NewTab("Inf-Mode")
local InfFeatures = BFeatures:NewSection("MeowForLofi")
local CFeatures = Window:NewTab("Auto-Style")
local StyleFeatures = CFeatures:NewSection("MeowForLofi")
local DFeatures = Window:NewTab("Misc")
local Misc = DFeatures:NewSection("MeowForLofi")
--Sung
InfFeatures:NewButton("InfSung", "InfSung", function()
local Tool = game:GetService("Players").LocalPlayer.Backpack["Shadow Sovereign Form"]
for i,v in next, game.Players.LocalPlayer.Backpack:GetChildren() do
    if v.name == "Shadow Sovereign Form" then
        task.wait()
        game.Players.LocalPlayer.Character.Humanoid:EquipTool(v)
        task.wait()
        Tool:Activate()
        task.wait(8.5)
        Tool:Destroy()
end
end
end)
--Songoku
InfFeatures:NewButton("InfSongoku", "InfSongoku", function()
        local Tool = game:GetService("Players").LocalPlayer.Backpack["Ultra Instinct"]
for i,v in next, game.Players.LocalPlayer.Backpack:GetChildren() do
    if v.name == "Ultra Instinct" then
        task.wait()
        game.Players.LocalPlayer.Character.Humanoid:EquipTool(v)
        task.wait()
        Tool:Activate()
        task.wait(10.9)
        Tool:Destroy()
end
end
end)
--Kagu
InfFeatures:NewButton("InfKagu", "InfKagu", function()
        local Tool = game:GetService("Players").LocalPlayer.Backpack["Fire God Form"]
for i,v in next, game.Players.LocalPlayer.Backpack:GetChildren() do
    for i=1, 1 do
    if v.name == "Fire God Form" then
        task.wait()
        game.Players.LocalPlayer.Character.Humanoid:EquipTool(v)
        task.wait()
        Tool:Activate()
        task.wait(4)
        Tool:Destroy()
        task.wait(2)
        game:GetService("ReplicatedStorage").RemoteEvent:FireServer("SpecialTrainer","Kagutsuchi")

        end
    end
end
end)

        wait(2)
       
    end)
    end)
    
--Carry
Misc:NewButton("CarryStuck(Keybind:Z)", "", function()
    local uis = game:GetService("UserInputService")
    local keybind = Enum.KeyCode.Z
    
    local isCarrying = false
    
    function InputBegan(input)
        if input.KeyCode == keybind and not isCarrying then
           local LP = game.Players.LocalPlayer LP.Character:FindFirstChild("Carrying"):Destroy() LP.Character:FindFirstChildOfClass("WeldConstraint"):Destroy()
           isCarrying = true 
               wait(3)
               local Humanoid = game.Players.LocalPlayer.Character.Humanoid
    local ActiveTracks = Humanoid:GetPlayingAnimationTracks()
    for _,v in pairs(ActiveTracks) do
        v:Stop()
    end
        end
    end
    
    function InputEnded(input)
        if input.KeyCode == keybind and isCarrying then
           local LP = game.Players.LocalPlayer LP.Character:FindFirstChild("Carrying"):Destroy() LP.Character:FindFirstChildOfClass("WeldConstraint"):Destroy()
           isCarrying = false 
           wait(3)
           local Humanoid = game.Players.LocalPlayer.Character.Humanoid
    local ActiveTracks = Humanoid:GetPlayingAnimationTracks()
    for _,v in pairs(ActiveTracks) do
        v:Stop()
    end
        end
    end
    
    uis.InputBegan:Connect(InputBegan)
    uis.InputEnded:Connect(InputEnded)
    
end)    
